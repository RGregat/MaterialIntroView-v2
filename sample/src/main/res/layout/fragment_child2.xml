<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".fragment.sequence.Child2Fragment">

  <Button
    android:id="@+id/child2_button1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="C2 Button1"
    android:tag="c2_b1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@id/child2_button2"
    app:layout_constraintTop_toTopOf="parent" />

  <Button
    android:id="@+id/child2_button2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:text="C2 Button2"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/child2_button1" />
</androidx.constraintlayout.widget.ConstraintLayout>